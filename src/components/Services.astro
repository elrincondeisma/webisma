---
const services = [
  {
    title: "Asesorías Técnicas",
    description: "Resuelve tus dudas sobre Laravel, arquitectura de software o decisiones tecnológicas con una sesión 1 a 1.",
    icon: "chat"
  },
  {
    title: "Automatizaciones",
    description: "Optimiza tus procesos de negocio mediante scripts y herramientas personalizadas que ahorran tiempo y dinero.",
    icon: "cog"
  },
  {
    title: "Revisión de Código",
    description: "Auditoría de tu base de código para mejorar la calidad, seguridad y mantenibilidad de tu proyecto Laravel.",
    icon: "code"
  },
  {
    title: "Infraestructura",
    description: "Configuración y mantenimiento de servidores, despliegues automatizados (CI/CD) y optimización de rendimiento.",
    icon: "server"
  },
  {
    title: "Cloud Architecture",
    description: "Diseño de arquitecturas escalables y resilientes en la nube (AWS, DigitalOcean) para aplicaciones de alto tráfico.",
    icon: "cloud"
  },
  {
    title: "Migraciones y Actualizaciones",
    description: "Actualización de proyectos legacy a las últimas versiones de Laravel y PHP, asegurando estabilidad y seguridad.",
    icon: "refresh"
  }
];
---

<section id="servicios" class="py-24 bg-slate-50 dark:bg-slate-900/50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
        Servicios Profesionales
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
        Impulsa tu proyecto con soluciones a medida y experiencia técnica de alto nivel.
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((service) => (
        <div class="group relative overflow-hidden rounded-2xl bg-white p-8 shadow-sm transition-all hover:shadow-md hover:-translate-y-1 dark:bg-slate-800 border border-slate-100 dark:border-slate-700">
          <div class="absolute top-0 right-0 -mt-4 -mr-4 h-24 w-24 rounded-full bg-primary-500/10 transition-all group-hover:bg-primary-500/20 blur-2xl"></div>
          
          <div class="relative z-10">
            <div class="mb-6 inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary-100 text-primary-600 dark:bg-primary-900/50 dark:text-primary-400">
              <!-- Simple SVG Icons based on name -->
              {service.icon === 'chat' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                </svg>
              )}
              {service.icon === 'cog' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {service.icon === 'code' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              )}
              {service.icon === 'server' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 01-2 2v4a2 2 0 012 2h14a2 2 0 012-2v-4a2 2 0 01-2-2m-2-4h.01M17 16h.01" />
                </svg>
              )}
              {service.icon === 'cloud' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 011-7.86 7 7 0 0113.76 0 4 4 0 014.14 4.14A4 4 0 0118 19H5a4 4 0 01-4-4z" />
                </svg>
              )}
              {service.icon === 'refresh' && (
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white">{service.title}</h3>
            <p class="mt-3 text-slate-600 dark:text-slate-400 leading-relaxed">
              {service.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
