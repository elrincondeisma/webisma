---
import { getCollection } from 'astro:content';

const videos = await getCollection('videos');
// Sort by date if needed, or just take the first 4. 
// Since date is a string "Hace X", sorting is tricky without real dates. 
// For now, we'll just take them as they come (or we could add an 'order' field).
const recentVideos = videos.slice(0, 4);
---

<section id="videos" class="py-24 bg-white dark:bg-slate-950">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-4">
      <div>
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
          Últimos Videos
        </h2>
        <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
          Tutoriales, guías y novedades sobre el ecosistema Laravel.
        </p>
      </div>
      <a href="https://www.youtube.com/@ElRinconDeIsma" target="_blank" class="inline-flex items-center gap-2 font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300">
        Ver todos los videos
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {recentVideos.map((video) => (
        <a href={video.data.url} target="_blank" class="group block space-y-3">
          <div class="relative aspect-video overflow-hidden rounded-xl bg-slate-100 dark:bg-slate-800">
            <!-- Placeholder Gradient instead of real image for now -->
            <div class={`absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-500/20 transition-transform duration-300 group-hover:scale-105`}></div>
            <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-12 h-12 text-white opacity-80 group-hover:opacity-100 transition-opacity drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z" />
                </svg>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-slate-900 group-hover:text-primary-600 dark:text-white dark:group-hover:text-primary-400 leading-tight">
              {video.data.title}
            </h3>
            <div class="mt-2 flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
              <span>{video.data.views} vistas</span>
              <span>•</span>
              <span>{video.data.date}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
